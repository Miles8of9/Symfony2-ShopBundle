<?php

namespace n3b\Bundle\Shop\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * @ORM\Entity
 */
class ProductOrdered extends Product
{
    /**
     * @ORM\Id
     * @ORM\Column(type="integer")
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    protected $id;
    /**
     * @ORM\Column(type="integer")
     */
    protected $quantity;
    /**
     * @ORM\Column(type="integer")
     */
    protected $quantityRequested;
    /**
     * @ORM\Column(type="decimal", scale="2")
     */
    protected $price;
    /**
     * @ORM\ManyToOne(targetEntity="Checkout", inversedBy="products")
     */
    protected $checkout;

    public function __construct()
    {
        $this->quantity = 0;
        $this->quantityRequested = 1;
    }
}
